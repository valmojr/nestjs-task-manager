generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum STATUS {
  not_assigned
  pending
  done
  stuck
  cancelled
}

model User {
  id     String @id
  name   String
  avatar String
  tasks  Task[]
}

model Goal {
  id          String    @id
  title       String
  description String
  image       String?
  status      Int?
  dueDate     DateTime?
  tasks       Task[]
  goalId      String?
  assingedTo  String
}

model Task {
  id          String    @id
  title       String
  description String
  image       String?
  userId      String?
  goalId      String?
  groupId     String?
  status      STATUS    @default(pending)
  dueDate     DateTime?
  user        User?     @relation(fields: [userId], references: [id])
  goal        Goal?     @relation(fields: [goalId], references: [id])
}
