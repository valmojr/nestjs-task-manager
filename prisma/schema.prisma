generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Guild {
  id                 String     @id @map("_id")
  discordId          String     @unique
  name               String?
  avatar             String?
  dashboardChannelId String?
  userIDs            String[]
  users              User[]     @relation(fields: [userIDs], references: [id])
  tasks              Task[]
  Reminder           Reminder[]
}

model User {
  id        String   @id @map("_id")
  discordId String   @unique
  name      String?
  avatar    String?
  guildIDs  String[]
  guilds    Guild[]  @relation(fields: [guildIDs], references: [id])
  taskIDs   String[]
  tasks     Task[]   @relation(fields: [taskIDs], references: [id])
}

model Task {
  id           String   @id @map("_id")
  title        String?
  description  String?
  image        String?
  status       Int      @default(0)
  level        Int      @default(1)
  guildId      String   @db.ObjectId
  guild        Guild    @relation(fields: [id], references: [id])
  fatherTaskId String?
  fatherTask   Task?    @relation("fatherTaskChildTasks", fields: [fatherTaskId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  childTasks   Task[]   @relation("fatherTaskChildTasks")
  userIDs      String[]
  users        User[]   @relation(fields: [userIDs], references: [id])
}

model Reminder {
  id        String  @id @map("_id")
  title     String?
  recurring String
  guildId   String  @db.ObjectId
  guild     Guild   @relation(fields: [id], references: [id])
}
