generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id     String @id
  name   String
  avatar String
  tasks  Task[]
  goals  Goal[]
}

model Task {
  id          String    @id
  title       String
  description String?
  image       String?
  user        User?     @relation(fields: [userId], references: [id])
  goalId      String?
  status      String?   @default("pending")
  dueDate     DateTime?
  goal        Goal?     @relation(fields: [goalId], references: [id])
  userId      String?
}

model Goal {
  id          String    @id
  title       String
  description String?
  image       String?
  status      String?   @default("pending")
  dueDate     DateTime?
  users       User[]
  tasks       Task[]
}
