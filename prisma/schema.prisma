generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum status {
  not_assigned
  pending
  done
  stuck
  cancelled
}

model user {
  id     String @id
  name   String
  avatar String
  tasks  task[]
  goals  goal[]
}

model task {
  id          String    @id
  title       String
  description String?
  image       String?
  user        user?     @relation(fields: [userId], references: [id])
  goalId      String?
  status      status
  dueDate     DateTime?
  goal        goal?     @relation(fields: [goalId], references: [id])
  userId      String?
}

model goal {
  id          String    @id
  title       String
  description String
  image       String?
  status      Int?
  dueDate     DateTime?
  users       user[]
  tasks       task[]
}
