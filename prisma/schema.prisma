generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum STATUS {
  not_assigned
  pending
  done
  stuck
  cancelled
}

model User {
  id     String @id
  name   String
  avatar String
  tasks  Task[]
  goals  Goal[]
}

model Task {
  id          String    @id
  title       String
  description String
  image       String?
  user        User      @relation(fields: [userId], references: [id])
  goalId      String?
  status      STATUS
  dueDate     DateTime?
  goal        Goal?     @relation(fields: [goalId], references: [id])
  userId      String
}

model Goal {
  id          String    @id
  title       String
  description String
  image       String?
  status      Int?
  dueDate     DateTime?
  users       User[]
  tasks       Task[]
}
